[Unit]
PartOf=graphical-session.target
After=graphical-session.target
Requisite=graphical-session.target

[Service]
ExecStart=/usr/bin/swayidle -w timeout 60 'brightnessctl set 5%' resume 'brightnessctl set 35%' timeout 301 'niri msg action power-off-monitors' timeout 300 'swaylock -f' before-sleep 'swaylock -f'
Restart=on-failure
